<listener port="80" log="./%1$s-http.txt">
    <!-- localhost -->
    <host name="localhost">
        <context path="/">
            <page location="./intra.ejs" />
        </context>

        <context path="/random[.](?:txt|xml|json|jsonp)">
            <script location="./random.js" />
        </context>
        
        <context root="./res/asset/image/" path="/favicon[.]ico">
            <file root="./" location="./icon_1.ico" />
        </context>

        <status code="(403|404|500)">
            <page location="./%1$s.ejs" /> 
        </status>
    </host>
</listener>